<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DCDC"
    android:baselineAligned="false"
    tools:context=".InboxDoctor">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="66dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_setting_foreground" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="83dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/ic_setting1_foreground"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="655dp"
        android:layout_marginTop="68dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="מסרים לטיפולי"
            android:textColor="#020202"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#00BCD4"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="מסרים שטופלו"
            android:textColor="#020202"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#00BCD4"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="מסרים שנשלחו"
            android:textColor="#020202"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#00BCD4"
            app:strokeWidth="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>